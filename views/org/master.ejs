<%- include ../_header %>

<h1 class="display-4"><%-title%></h1>

<ul class="nav nav-tabs">
	<li class="nav-item">
        <a class="nav-link active" data-toggle="tab" role="tab" href="#overview">Overview</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" role="tab" href="#summary">Responsibilities</a>
    </li>
	<li class="nav-item">
        <a class="nav-link" data-toggle="tab" role="tab" href="#chief"><%-chief.title%></a>
    </li>
</ul>

<div class="tab-content">
		
		<div class="tab-pane active" id="overview" role="tabpanel">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card card-block">
                        <div class="card card-block">
                            <% for (var i=0; i<overview.comment.length; i++) { %>
                                <p class="card-text"><%-overview.comment[i]%></p>
                            <% } %>
                        </div>
                    </div>
				</div>
			</div>
		</div>
		
        <div class="tab-pane" id="summary" role="tabpanel">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card card-block">
                        <div class="card card-block">
                            <table class="table table-hover">
								<thead>
									<tr>
										<th col width="40%">Process</th>
										<th>Product Owner Responsibilities</th>
									</tr>
								</thead>
								<tbody>
								<%
									for (var i=0; i<table.length; i++) {
										var item = table[i]; %>
										<tr>
											<th scope="row"><%=item.process%></th>
											<td>
											<%
												var comments = item.comments;
												for (var j=0; j<comments.length; j++) { %>
													<li><%=comments[j]%>
											<% } %>
											</td>
										</tr>
								<% } %>
								</tbody>
							</table>
                        </div>
                    </div>
				</div>
			</div>
		</div>
		
		<div class="tab-pane" id="chief" role="tabpanel">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card card-block">
                        <div class="card card-block">
                            <% for (var i=0; i<chief.comment.length; i++) { %>
                                <p class="card-text"><%-chief.comment[i]%></p>
                            <% } %>
                        </div>
                    </div>
					
					<div class="card card-block">
					<div class="col-sm-12">
						<div class="col-sm-2"></div>
							<div class="col-sm-8">
								<div class="card card-block">
									<img class="w-100" src="/<%-chief.image%>" alt="Scrum of scrums questions">
								</div>
							</div>
						<div class="col-sm-2"></div>
					</div>
				</div>
				</div>
			</div>
		</div>
</div>
	

<%- include ../_footer %>

