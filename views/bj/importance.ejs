<%- include ../_header %>

<h1 class="display-4"><%=title%></h1>

<div class="col-sm-12">    
    <div class="card card-block">
        <% for (var i=0; i<comment.length; i++) { %>
            <p class="card-text"><%-comment[i]%>
        <% } %>
    </div> 
</div>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" role="tab" href="#factors"><%-factors.title%></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" role="tab" href="#lifecycle"><%-lifecycle.title%></a>
  </li>
</ul>

<div class="tab-content">

    <div class="tab-pane active" id="factors" role="tabpanel">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-block">
                    <div class="card card-block">
			<% for (var i=0; i<factors.comment.length; i++) { %>
                            <p class="card-text"><%-factors.comment[i]%></p>
			<% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="tab-pane" id="lifecycle" role="tabpanel">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-block">
                    <div class="card card-block">
			<% for (var i=0; i<lifecycle.comment.length; i++) { %>
                            <p class="card-text"><%-lifecycle.comment[i]%></p>
			<% } %>
                    </div>
                </div>
                <div class="card card-block">
                    <div class="col-sm-12">
			<div class="col-sm-2"></div>
                            <div class="col-sm-8">
				<div class="card card-block">
                                    <img class="w-100" src="/<%-lifecycle.image%>" alt="BJ lifecycle">
				</div>
                            </div>
			<div class="col-sm-2"></div>
                    </div>
		</div>
            </div>
        </div>
    </div>
    
</div>

<%- include ../_footer %>

