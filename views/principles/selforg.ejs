<%- include ../_header %>

<h1 class="display-4"><%=title%></h1>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" role="tab" href="#overview">Overview</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" role="tab" href="#benefits">Benefits</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" role="tab" href="#goals">Goals</a>
  </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane active" id="overview" role="tabpanel">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-block">
                    <% for (var i=0; i<overview.length; i++) { %>
                        <p class="card-text"><%-overview[i]%></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="benefits" role="tabpanel">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-block">
                    <div class="card card-block">
                        <% for (var i=0; i<benefits.length; i++) { %>
                            </p><%-benefits[i]%>
                        <% } %>
                    </div>
                    
                </div>
                
            </div>
        </div>
    </div>
   
    <div class="tab-pane" id="goals" role="tabpanel">
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-block">
                    <div class="card card-block">
                        <div class="card card-block">
                            <% for (var i=0; i<goals.length; i++) { %>
                                </p><%-goals[i]%>
                            <% } %>
                        </div>
                        <div class="card card-block">
                        <div class="col-sm-12">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-8">
                                <div class="card card-block">
                                    <img class="w-100" src="/<%-image%>" alt="self-organization">
                                </div>
                            </div>
                            <div class="col-sm-2"></div>
                        </div>
                        </div>
                    </div>
                    
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    
</div>

<%- include ../_footer %>
